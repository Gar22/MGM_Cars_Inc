


<h2> <%= pluralize(@cars.size, 'Car') %> <%= 'is'.pluralize(@cars.size) %> in this list:</h2>

<ul>
  <% @cars.each do |car| %>
    <article>
      <header>
        <h3><%= car.year %>, <%= car.make %> <%= car.model %>
      </header>
    <p>
    <table>
      <tr>
        <th> Color:</th>
        <td> <%= car.color %><br></td>
      </tr>

      <tr>
        <th>Mileage: </th>
        <td><%= car.mileage %></td>
      </tr>
      
      <%
=begin%>
 <tr>
        <th>Vehicle type: </th>
        <td><%= car.vehicle_type %></td> 
      </tr> 
<%
=end%>

     <%
=begin%>
 <tr>
        <th>Price: </th>
        <td><%= car.price %></td>
      </tr> 
<%
=end%>

    </table>
  </article>
  
  <% end %>
  
</ul>